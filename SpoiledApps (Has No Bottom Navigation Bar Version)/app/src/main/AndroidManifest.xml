<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spoiledapps">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AppListActivity"
            android:label="@string/title_activity_app_list"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".verificationPage" />
        <activity
            android:name=".WriteReviewPage"
            android:label="@string/title_activity_write_review_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddAppPage"
            android:label="@string/title_activity_add_app_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RegistrationActivity" />
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>