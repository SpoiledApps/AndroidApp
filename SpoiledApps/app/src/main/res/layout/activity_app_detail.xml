<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppListActivity">

    <ScrollView
            android:id="@+id/reviewlistscroll"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:layout_marginTop="200dp">

        <LinearLayout
                android:id="@+id/reviewlistscrolllayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
    </ScrollView>
    <TextView
            android:id="@+id/AppTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="36sp" android:layout_marginStart="15dp"/>

    <TextView
            android:id="@+id/CompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:textSize="24sp" android:layout_marginStart="15dp"/>

    <Button
            android:id="@+id/writereviewbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="142dp"
            android:layout_marginRight="15dp"
            android:text="@string/Writereview" android:layout_marginEnd="15dp" android:drawableLeft="@drawable/icon8"
            style="@style/Widget.AppCompat.Button.Colored" android:textColorHighlight="#FF8A80"
            android:textColorLink="#B388FF"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>